CC = gcc
CFLAGS = -W -Wall -ansi -std=c99 -g
LIBS = 
LDFLAGS = $(sdl2-config --cflags --libs)
INCLUDES = -lSDL2 -lSDL2_ttf -lSDL2_image
EXEC = main
SRC = main2.c fonctions_fichiers.c
OBJ = $(SRC:.c=.o)

all: $(EXEC)
main: $(OBJ)
	$(CC) $(CFLAGS) $(INCLUDES) -o $@ $^ $(LIBS) $(LDFLAGS)
%.o: %.c
	$(CC) $(CFLAGS) -o $@ -c $<
clean:
	rm -rf *.o *~
mrproper: clean
	rm -rf $(EXEC)
